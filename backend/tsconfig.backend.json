{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["../node_modules", "./dist"]
}
