{
  "name": "bhisey-backend",
  "version": "1.0.0",
  "description": "Bhisey Backend API Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "prisma generate && tsc -p tsconfig.backend.json",
    "dev": "ts-node --project tsconfig.backend.json src/server.ts",
    "watch": "nodemon --watch src -e ts,js --exec ts-node --project tsconfig.backend.json src/server.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.11.10",
    "@types/sanitize-html": "^2.11.0",
    "@types/validator": "^13.15.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "sanitize-html": "^2.13.0",
    "typescript": "^5.9.2",
    "validator": "^13.15.15",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "schema": "../prisma/schema.prisma"
  }
}
